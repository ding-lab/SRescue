// from https://washu.atlassian.net/wiki/spaces/RUD/pages/1782513713/Nextflow

process {
    executor = "lsf"
    queue    = { "general" } 

	withLabel: survivor {
		clusterOptions =  { "-a 'docker(mwyczalkowski/survivor:20251001)' -J nextflow -env 'all,PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'" }
	}
	withLabel: perl {
		clusterOptions =  { "-a 'docker(mwyczalkowski/perl-util:20251003)' -J nextflow -env 'all,PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'" }
	}
	withLabel: cutesv {
		clusterOptions =  { "-a 'docker(mwyczalkowski/cutesv:20251002)' -J nextflow -env 'all,PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'" }
	}
	withLabel: samtools {
		clusterOptions =  { "-a 'docker(mgibio/samtools:v1.21-noble)' -J nextflow -env 'all,PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'" }


	}
}

executor {
    queueSize = 7
    submitRateLimit = '1/1sec'

}
